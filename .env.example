# Copy to .env (for local runs) or set these in Replit Secrets
# Notion tokens
NOTION_TOKEN=
# Fallback alternative name often used elsewhere in repo
NOTION_API_KEY=
NOTION_DB_PROJECTS_ID=
NOTION_DB_DOCS_ID=

# Database: prefer Postgres. If empty, backend falls back to SQLite at data/nexus.db
DATABASE_URL=

# Optional admin security and CORS config
ADMIN_TOKEN=
CORS_ORIGINS=*

# RAG / reranker settings (optional)
RERANKER_ENABLED=0
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# Optional connectors
SLACK_BOT_TOKEN=
TEAMS_BOT_ID=
TEAMS_BOT_PASSWORD=
GOOGLE_SERVICE_ACCOUNT_JSON=

# Local LLM settings
MODEL_GGUF_PATH=models/llm/mistral-7b-instruct-v0.2.Q4_K_M.gguf
LLM_THREADS=2
LLM_CONTEXT=3072
