{
	"name": "nexus-sentient-platform",
	"version": "3.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"start": "node build/index.js",
		"serve": "npm run build && node build/index.js",
		"test": "vitest",
		"test:watch": "vitest --watch",
		"test:coverage": "vitest --coverage",
		"test:ui": "vitest --ui",
		"test:e2e": "playwright test",
		"test:e2e:headed": "playwright test --headed",
		"test:all": "npm run test:coverage && npm run test:e2e",
		"lint": "prettier --check . && eslint .",
		"datasets:readme": "node -e \"require('fs').createReadStream('scripts/datasets/README_DATASETS.md').pipe(process.stdout)\"",
		"datasets:prep:resume": "python scripts/datasets/download_hf_resume.py",
		"datasets:prep:advising": "python scripts/datasets/download_hf_advising.py",
		"ingest:datasets": "npx ts-node -T scripts/ingest_datasets.ts",
		"lint:fix": "prettier --write . && eslint . --fix",
		"format": "prettier --write .",
		"type-check": "svelte-check --tsconfig ./tsconfig.json",
		"health-check": "curl -f http://localhost:5173/api/health || exit 1",
		"datasets:download:all:ps": "powershell -ExecutionPolicy Bypass -File scripts/datasets/download_all.ps1",
		"datasets:download:all:sh": "bash scripts/datasets/download_all.sh",
		"db:apply:trends": "node -e \"require('fs').createReadStream('supabase/sql/trends.ddl.sql').pipe(process.stdout)\"",
		"analyze:trends": "npx ts-node -T scripts/analyze_trends.ts",
		"datasets:download:A": "powershell -ExecutionPolicy Bypass -File scripts/datasets/download_category_A.ps1",
		"datasets:download:B": "powershell -ExecutionPolicy Bypass -File scripts/datasets/download_category_B.ps1",
		"datasets:download:C": "powershell -ExecutionPolicy Bypass -File scripts/datasets/download_category_C.ps1",
		"datasets:download:D": "powershell -ExecutionPolicy Bypass -File scripts/datasets/download_category_D.ps1",
		"db:apply:esco": "node -e \"require('fs').createReadStream('supabase/sql/esco.ddl.sql').pipe(process.stdout)\"",
		"ingest:esco": "npx ts-node -T scripts/workers/ingest_esco.ts",
		"db:apply:excellence": "node -e \"require('fs').createReadStream('supabase/sql/excellence.ddl.sql').pipe(process.stdout)\"",
		"ingest:excellence": "npx ts-node -T scripts/workers/ingest_excellence.ts"
	},
	"devDependencies": {
		"@emotion/react": "11.14.0",
		"@emotion/styled": "11.14.1",
		"@mui/material": "7.3.1",
		"@playwright/test": "^1.45.1",
		"@sveltejs/adapter-auto": "^3.2.1",
		"@sveltejs/adapter-node": "5.3.1",
		"@sveltejs/adapter-vercel": "4.0.5",
		"@sveltejs/kit": "^2.5.17",
		"@sveltejs/vite-plugin-svelte": "4.0.4",
		"@testing-library/jest-dom": "^6.4.6",
		"@types/node": "^20.14.8",
		"@types/react": "19.1.10",
		"@types/react-dom": "19.1.7",
		"autoprefixer": "^10.4.19",
		"eslint": "^9.5.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.40.0",
		"postcss": "^8.4.38",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.5",
		"svelte": "^5.0.0-next.158",
		"svelte-check": "^3.8.1",
		"tailwindcss": "^3.4.4",
		"tslib": "^2.6.3",
		"typescript": "^5.5.2",
		"vite": "^5.3.1",
		"vitest": "^1.6.0"
	},
	"dependencies": {
		"@google/generative-ai": "^0.14.1",
		"@notionhq/client": "4.0.2",
		"@supabase/supabase-js": "^2.43.5",
		"clsx": "^2.1.1",
		"dotenv": "^16.4.5",
		"highlight.js": "11.11.1",
		"marked": "16.1.2",
		"redis": "5.8.1",
		"svelte-sonner": "1.0.5",
		"zod": "3.25.76"
	}
}
